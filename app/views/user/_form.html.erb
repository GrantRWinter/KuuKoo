<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "error") %> prevented this user from being submitted:
      <ul>
        <% @user.errors.full_user.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label "first_name" %><br>
    <%= f.text_field "first_name" %>
  </div>
  <div>
    <%= f.label "last_name" %><br>
    <%= f.text_field "last_name" %>
  </div>
  <div>
    <%= f.label "email" %><br>
    <%= f.text_field "email" %>
  </div>
  <div>
    <%= f.submit "Submit" %> 
  </div>
<% end %>